{% extends 'base.html.twig' %}

{% block title %}Modification de Film{% endblock %}
{% block pageTitle %}Modification de Film{% endblock %}

{% block body %}
<form action="" method="POST" >
    <div class="">
        <div class="grid grid-cols-2 gap-2">
            <label for="titre">
                Titre du film :
            </label>
            <input class="border border-gray-700" type="text" name="titre" id="titre" />
        </div> 
        <div class="grid grid-cols-2 gap-2">
            <label for="genre">
                Genre :
            </label>
            <select class="border border-gray-700" name="genre" id="genre_id">
                <option value="" />
                {% for genre in genres %}
                    <option value="{{ genre.id }}">{{ genre.categorie}}</option>
                {% endfor %}
            </select>
        </div>
        <div class="grid grid-cols-2 gap-2">
            <label for="resume">
                Résumé :
            </label>
            <textarea class="border border-gray-700" name="resume" id="resume"></textarea>
        </div>
        <div class="grid grid-cols-2 gap-2">
            <label for="sortie">
                Date de sortie :
            </label>
            <input class="border border-gray-700" type="date" name="sortie" id="sortie" />
        </div>
        <div class="grid grid-cols-2 gap-2">
            <label>
            Affiche:
            </label>
        <input type="file" name="affiche" id="affiche"/>
        </div> 
        <div class="grid grid-cols-2 gap-2">
            <label for="acteurs">
                Acteurs :
            </label>
            <select class="border border-gray-700" name="acteurs" id="acteurs">
                <option value="" />
                {% for acteur in film.acteurs %}
                    <option value="{{ acteur.id }}">{{ acteur.nom}}{{ acteur.prenom}}</option>
                {% endfor %}
            </select> 
        </div>
        <div class="col-span-2 flex justify-around">
            <button class="border border-gray-700 rounded-md px-4 py-1" type="reset">Annuler</button>
            <button class="border border-gray-700 rounded-md px-4 py-1" type="submit">Enregistrer</button>
        </div>
    </div>

</form>
{% endblock %}
