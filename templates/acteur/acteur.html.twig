{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}
{% block pageTitle %}Liste des acteurs{% endblock %}

{% block body %}
<a href="{{ url('app_acteur_create') }}"
    class="border border-gray-700 rounded-md px-4 py-1">
    Créer
</a>

<div class="">
    <h1>Les acteurs</h1>
    <table class="table table-bordered table-condensed" width='80%'>
        <thead>
            <tr bgcolor='pink'>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Date de décès</th>
                <th>Photo</th>
                <th>Option</th>

            </tr>
        </thead>
        <tbody>
            {% for acteurs in acteur %}
            <tr>
                <td><a href="{{ path ('app_acteur_show', {'id': acteurs.id}) }}">{{ acteurs.nom }}</a></td>
                <td>{{ acteurs.prenom }}</td>
                <td>{{ acteurs.naissance|date("d/m/Y") }}</td>
                <td>
                {{ acteurs.deces|date("d/m/Y") }}
                </td>
                <td>{{ acteurs.photo }}</td>
                <td>
                    <a href="{{ url('app_acteur_edit', {'acteur': acteurs.id}) }}">Modifier</a>
                    <a href="{{ url('app_acteur_delete', {'acteur': acteurs.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <p>Images non fonctionelles et pour la partie create et edit, il y a une obligation de choisir une date de décès</p>
</div>

{% endblock %}
